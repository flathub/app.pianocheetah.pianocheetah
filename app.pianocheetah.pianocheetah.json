{
   "app-id":  "app.pianocheetah.pianocheetah",
   "command": "pianocheetah",
   "sdk":     "org.kde.Sdk",
   "runtime": "org.kde.Platform",
   "runtime-version": "6.6",
   "finish-args": [
      "--filesystem=host",
      "--share=ipc",
      "--share=network",
      "--device=dri",
      "--socket=wayland",
      "--socket=fallback-x11",
      "--socket=pulseaudio"
   ],
   "modules": [
      {
         "name": "cp_to_app",
         "buildsystem": "simple",
         "build-commands": [
            "cp -pr share /app",
            "cp -pr bin   /app"
         ],
         "sources": [
            {
               "type": "git",
               "url": "https://github.com/Stephen-Hazel/pc_build.git",
               "commit": "6d04ca7aa044cc8a333c140594d21b817782645a"
            }
         ]
      }
   ]
}
